<Window x:Class="TestApp.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:XControl.Controls;assembly=XControl"
        Title="TestWindow" Height="300" Width="510">
    <Grid>
        <Controls:RangeSlider Name="rangeSlider" Min="0" Max="100" Start="50" End="100" Value="50" />
        
        <StackPanel Margin="0 0 0 0">
            <TextBlock Name="tb_value" Text="{Binding ElementName=rangeSlider, Path=Value}" />
            <TextBlock Name="tb_start" Height="30" Text="{Binding ElementName=rangeSlider, Path=Start}" />
            <TextBlock Name="tb_end" Height="30" Text="{Binding ElementName=rangeSlider, Path=End}" />
        </StackPanel>
    </Grid>
</Window>
