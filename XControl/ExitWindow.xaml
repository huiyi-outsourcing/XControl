<Window x:Class="XControl.ExitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        Background="{x:Null}"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Width="260" Height="160">
    <Border Background="#242121" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="110" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Border BorderBrush="#3e3636" BorderThickness="0 0 0 1">
                <TextBlock Text="确认退出软件" 
                           FontSize="16" Foreground="#ffffff"
                           HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130" />
                    <ColumnDefinition Width="130" />
                </Grid.ColumnDefinitions>
                <Border BorderBrush="#3e3636" BorderThickness="0 0 1 0" />
                <Label Style="{StaticResource XLabel}" FontSize="14" Content="确定" Grid.Column="0"/>
                <Label Style="{StaticResource XLabel}" FontSize="14" Content="退出" Grid.Column="1" />
            </Grid>
        </Grid>
    </Border>
</Window>
